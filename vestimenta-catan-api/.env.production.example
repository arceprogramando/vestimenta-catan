# ============================================
# API PRODUCTION ENVIRONMENT VARIABLES
# ============================================

# Node environment
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://vestimenta_user:YOUR_PASSWORD@postgres:5432/vestimenta_catan?schema=public

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET=CHANGE_THIS
JWT_REFRESH_SECRET=CHANGE_THIS_DIFFERENT

# Token expiration
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://yourdomain.com

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Logging
LOG_LEVEL=info

# API Prefix
API_PREFIX=api
