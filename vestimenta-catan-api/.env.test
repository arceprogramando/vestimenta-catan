# =================================
# E2E Testing Configuration
# =================================
# Este archivo se usa para ejecutar tests E2E contra la BD de prueba
# La BD de prueba corre en el puerto 5434 (separada de desarrollo en 5433)

# Server Configuration
PORT=3001
NODE_ENV=test

# Database Configuration - BD de TEST (puerto 5434)
DATABASE_URL=postgresql://postgres:developer@localhost:5434/comercio_electronico_db_test?schema=public

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# API Configuration
API_PREFIX=api

# =================================
# JWT Authentication (claves de prueba)
# =================================
JWT_ACCESS_SECRET=test-access-secret-key-for-e2e-testing-only-32chars
JWT_ACCESS_EXPIRES_IN=15m

JWT_REFRESH_SECRET=test-refresh-secret-key-for-e2e-testing-only-32chars
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# Password Hashing (menos rounds para tests mas rapidos)
# =================================
BCRYPT_SALT_ROUNDS=4

# Logging (silencioso en tests)
LOG_LEVEL=error

# Rate Limiting (deshabilitado para tests)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10000

# =================================
# Google OAuth (mock para tests)
# =================================
GOOGLE_CLIENT_ID=test-google-client-id.apps.googleusercontent.com
