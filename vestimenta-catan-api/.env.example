# =================================
# NestJS Application Configuration
# =================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?schema=schema_name

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# API Configuration
API_PREFIX=api

# =================================
# JWT Authentication
# =================================
# Access Token - corta duración para requests normales
JWT_ACCESS_SECRET=your-access-secret-key-min-32-characters-change-in-production
JWT_ACCESS_EXPIRES_IN=15m

# Refresh Token - larga duración para renovar access tokens
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# Password Hashing
# =================================
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =================================
# Google OAuth
# =================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
